    <div class="config-section" id="configSection">
        <h3>‚öôÔ∏è Configuration</h3>
        <div class="input-group">
            <label for="tokenInput">Token Teamup</label>
            <input type="password" id="tokenInput" placeholder="Colle ton token ici">
        </div>
        <button class="btn" onclick="loadSchedule()">üöÄ Charger mon emploi du temps</button>
    </div>

    <div class="loading" id="loading">
        <div class="spinner"></div>
        üîÑ Chargement des √©v√©nements...
    </div>

    <div class="content" id="content"></div>

    <div class="modal" id="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>üìã D√©tails de l'√©v√©nement</h2>
                <button class="close-btn" onclick="closeModal()">√ó</button>
            </div>
            <div class="modal-body" id="modalBody"></div>
        </div>
    </div>

    <script>
        const CALENDAR_KEY = "ksf3a81e0c57b1a1c2";
        let API_TOKEN = "";

        // Charger le token depuis localStorage
        window.addEventListener('load', () => {
            const savedToken = localStorage.getItem('teamup_token');
            if (savedToken) {
                document.getElementById('tokenInput').value = savedToken;
                loadSchedule();
            }
        });

        async function loadSchedule() {
            API_TOKEN = document.getElementById('tokenInput').value.trim();
            
            if (!API_TOKEN) {
                alert('‚ö†Ô∏è Veuillez entrer votre token Teamup');
                return;
            }

            // Sauvegarder le token
            localStorage.setItem('teamup_token', API_TOKEN);

            // Afficher le loading
            document.getElementById('configSection').style.display = 'none';
            document.getElementById('loading').classList.add('show');
            document.getElementById('content').classList.remove('show');

            try {
                const events = await fetchEvents();
                const { planning, jours, eventsList } = buildPlanning(events);
                displayPlanning(planning, jours, eventsList);
            } catch (error) {
                alert('‚ùå Erreur: ' + error.message + '\n\nV√©rifie ton token.');
                document.getElementById('configSection').style.display = 'block';
                document.getElementById('loading').classList.remove('show');
            }
        }

        function getWeekRange() {
            const today = new Date();
            const day = today.getDay();
            const diff = today.getDate() - day + (day === 0 ? -6 : 1);
            const monday = new Date(today.setDate(diff));
            const friday = new Date(monday);
            friday.setDate(monday.getDate() + 4);
            return { monday, friday };
        }

        async function fetchEvents() {
            const { monday, friday } = getWeekRange();
            const startDate = monday.toISOString().split('T')[0];
            const endDate = friday.toISOString().split('T')[0];

            const url = `https://api.teamup.com/${CALENDAR_KEY}/events?startDate=${startDate}&endDate=${endDate}`;
            
            const response = await fetch(url, {
                headers: { 'Teamup-Token': API_TOKEN }
            });

            if (!response.ok) throw new Error('Erreur API');
            const data = await response.json();
            return data.events;
        }

        function buildPlanning(events) {
            const jours = ['Lundi', 'Mardi', 'Mercredi', 'Jeudi', 'Vendredi'];
            const joursMap = {
                'Monday': 'Lundi', 'Tuesday': 'Mardi', 'Wednesday': 'Mercredi',
                'Thursday': 'Jeudi', 'Friday': 'Vendredi'
            };
            const disciplinesIgnorees = ['francais_nv2', 'allemand_nv2', 'mathematique_nv1', 'fran√ßais_nv2', 'mathematiques_nv1'];

            const { monday, friday } = getWeekRange();
            const planning = {};
            jours.forEach(j => planning[j] = []);
            const eventsList = [];

            events.forEach(event => {
                if (event.all_day) return;

                // Filtrer disciplines
                let disciplineCustom = null;
                if (event.custom && event.custom.discipline_concerne_e) {
                    const raw = event.custom.discipline_concerne_e;
                    disciplineCustom = (Array.isArray(raw) ? raw[0] : raw)
                        .replace(/[\[\]']/g, '').toLowerCase().trim();
                }
                if (disciplineCustom && disciplinesIgnorees.includes(disciplineCustom)) return;

                const start = new Date(event.start_dt);
                const end = new Date(event.end_dt);
                
                if (start < monday || start > friday) return;

                const jourEn = start.toLocaleDateString('en-US', { weekday: 'long' });
                const jourFr = joursMap[jourEn];
                if (!jourFr) return;

                const duree = (end - start) / 3600000;
                const titre = event.title;
                
                let niveau = null;
                const titreLower = titre.toLowerCase();
                if (titreLower.includes('nv2')) niveau = 'NV2';
                else if (titreLower.includes('nv1')) niveau = 'NV1';

                let discipline = null;
                if (event.custom && event.custom.discipline_concerne_e) {
                    const raw = event.custom.discipline_concerne_e;
                    discipline = (Array.isArray(raw) ? raw[0] : raw)
                        .replace(/[\[\]'0]/g, '').trim();
                    discipline = discipline.charAt(0).toUpperCase() + discipline.slice(1);
                }

                let enseignant = null;
                if (event.custom && event.custom.nom_de_l_enseignant_concerne_) {
                    enseignant = event.custom.nom_de_l_enseignant_concerne_;
                } else if (event.who) {
                    enseignant = event.who;
                }

                const eventData = {
                    id: event.id,
                    numero: eventsList.length + 1,
                    heureDebut: start.toTimeString().slice(0, 5),
                    heureFin: end.toTimeString().slice(0, 5),
                    titre, duree, niveau,
                    jour: jourFr,
                    discipline, enseignant
                };

                planning[jourFr].push(eventData);
                eventsList.push(eventData);
            });

            jours.forEach(jour => {
                planning[jour].sort((a, b) => a.heureDebut.localeCompare(b.heureDebut));
            });

            return { planning, jours, eventsList };
        }

        function displayPlanning(planning, jours, eventsList) {
            document.getElementById('loading').classList.remove('show');
            document.getElementById('content').classList.add('show');

            const { monday, friday } = getWeekRange();
            const formatDate = d => d.toLocaleDateString('fr-FR', { day: '2-digit', month: '2-digit' });
            document.getElementById('weekInfo').textContent = `Du ${formatDate(monday)} au ${formatDate(friday)}`;

            const content = document.getElementById('content');
            content.innerHTML = '';

            const today = new Date().toLocaleDateString('fr-FR', { weekday: 'long' });
            const todayCapitalized = today.charAt(0).toUpperCase() + today.slice(1);

            let mondayCopy = new Date(monday);
            jours.forEach((jour, idx) => {
                const jourDate = new Date(mondayCopy);
                jourDate.setDate(mondayCopy.getDate() + idx);
                const isToday = jour === todayCapitalized;

                const section = document.createElement('div');
                section.className = 'day-section';

                const header = document.createElement('div');
                header.className = 'day-header' + (isToday ? ' today' : '');
                header.innerHTML = `
                    <div>
                        ${isToday ? 'üåü ' : ''}${jour}
                    </div>
                    <div class="day-date">${jourDate.getDate()}/${jourDate.getMonth() + 1}</div>
                `;
                section.appendChild(header);

                const eventList = document.createElement('div');
                eventList.className = 'event-list';

                if (planning[jour].length === 0) {
                    eventList.innerHTML = '<div class="empty-day">(aucun √©v√©nement)</div>';
                } else {
                    planning[jour].forEach(event => {
                        const card = document.createElement('div');
                        card.className = 'event-card';
                        if (event.niveau === 'NV2') card.classList.add('nv2');
                        else if (event.niveau === 'NV1') card.classList.add('nv1');
                        card.onclick = () => showEventDetails(event);

                        let infoParts = [];
                        if (event.discipline) infoParts.push(`<span class="event-badge">üìö ${event.discipline}</span>`);
                        if (event.enseignant) infoParts.push(`<span class="event-badge">üë®‚Äçüè´ ${event.enseignant}</span>`);
                        if (event.niveau) {
                            const badgeClass = event.niveau === 'NV2' ? 'badge-nv2' : 'badge-nv1';
                            infoParts.push(`<span class="event-badge ${badgeClass}">${event.niveau}</span>`);
                        }

                        card.innerHTML = `
                            <div class="event-time">‚è∞ ${event.heureDebut} - ${event.heureFin} (${event.duree.toFixed(1)}h)</div>
                            <div class="event-title">${event.titre}</div>
                            <div class="event-info">${infoParts.join('')}</div>
                        `;

                        eventList.appendChild(card);
                    });
                }

                section.appendChild(eventList);
                content.appendChild(section);
            });

            // Stats
            const stats = document.createElement('div');
            stats.className = 'stats';
            const totalHeures = eventsList.reduce((sum, e) => sum + e.duree, 0);
            stats.innerHTML = `
                <h3>üìä Statistiques</h3>
                <div class="stat-item">
                    <span class="stat-label">üìå Total √©v√©nements</span>
                    <span class="stat-value">${eventsList.length}</span>
                </div>
                <div class="stat-item">
                    <span class="stat-label">‚è±Ô∏è Total heures</span>
                    <span class="stat-value">${totalHeures.toFixed(1)}h</span>
                </div>
                <div class="stat-item">
                    <span class="stat-label">üìà Moyenne par jour</span>
                    <span class="stat-value">${(totalHeures / 5).toFixed(1)}h</span>
                </div>
            `;
            content.appendChild(stats);
        }

        async function showEventDetails(event) {
            const modal = document.getElementById('modal');
            const modalBody = document.getElementById('modalBody');

            modalBody.innerHTML = '<div style="text-align:center;padding:20px;">üîÑ Chargement...</div>';
            modal.classList.add('show');

            try {
                const url = `https://api.teamup.com/${CALENDAR_KEY}/events/${event.id}`;
                const response = await fetch(url, {
                    headers: { 'Teamup-Token': API_TOKEN }
                });
                const data = await response.json();
                const details = data.event;

                let html = `
                    <div class="detail-item">
                        <div class="detail-label">üìå Titre</div>
                        <div class="detail-value">${details.title}</div>
                    </div>
                `;

                if (event.enseignant) {
                    html += `
                        <div class="detail-item">
                            <div class="detail-label">üë®‚Äçüè´ Professeur</div>
                            <div class="detail-value">${event.enseignant}</div>
                        </div>
                    `;
                }

                if (event.discipline) {
                    html += `
                        <div class="detail-item">
                            <div class="detail-label">üìö Discipline</div>
                            <div class="detail-value">${event.discipline}</div>
                        </div>
                    `;
                }

                if (event.niveau) {
                    html += `
                        <div class="detail-item">
                            <div class="detail-label">üéì Niveau</div>
                            <div class="detail-value">${event.niveau}</div>
                        </div>
                    `;
                }

                html += `
                    <div class="detail-item">
                        <div class="detail-label">‚è∞ Horaire</div>
                        <div class="detail-value">${event.heureDebut} - ${event.heureFin} (${event.duree.toFixed(1)}h)</div>
                    </div>
                `;

                if (details.location) {
                    html += `
                        <div class="detail-item">
                            <div class="detail-label">üìç Lieu</div>
                            <div class="detail-value">${details.location}</div>
                        </div>
                    `;
                }

                if (details.notes) {
                    const notes = details.notes.replace(/<[^>]+>/g, '').trim();
                    if (notes) {
                        html += `
                            <div class="detail-item">
                                <div class="detail-label">üìù Description</div>
                                <div class="detail-value">${notes}</div>
                            </div>
                        `;
                    }
                }

                html += `
                    <div class="detail-item">
                        <div class="detail-label">üîó Lien Teamup</div>
                        <div class="detail-value">
                            <a href="https://teamup.com/${CALENDAR_KEY}?view=a&showEvent=${event.id}" target="_blank">
                                Ouvrir dans Teamup ‚Üí
                            </a>
                        </div>
                    </div>
                `;

                modalBody.innerHTML = html;
            } catch (error) {
                modalBody.innerHTML = '<div style="color:#e74c3c;padding:20px;">‚ùå Erreur lors du chargement des d√©tails</div>';
            }
        }

        function closeModal() {
            document.getElementById('modal').classList.remove('show');
        }

        // Fermer modal en cliquant √† l'ext√©rieur
        document.getElementById('modal').addEventListener('click', (e) => {
            if (e.target.id === 'modal') closeModal();
        });
    </script>
</body>
